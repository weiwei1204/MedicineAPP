<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCFCFC"
    android:orientation="vertical"
    tools:context="com.example.carrie.carrie_test1.medicine_cal">

    <!--<android.support.v7.widget.Toolbar-->
        <!--android:id="@+id/toolbar"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="56dp"-->
        <!--android:background="?attr/colorPrimary"-->
        <!--android:theme="@style/ThemeOverlay.AppCompat.ActionBar"-->
        <!--app:popupTheme="@style/ThemeOverlay.AppCompat.Light"-->
        <!--tools:layout_editor_absoluteX="8dp"-->
        <!--tools:layout_editor_absoluteY="0dp"-->
        <!--/>-->

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

    <TableLayout
        android:layout_width="344dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/m_calendarid"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="排程名稱"
                    android:textColor="#8E8E8E"
                    android:textSize="9pt" />

                <EditText
                    android:id="@+id/m_cal_nameid"
                    android:layout_width="200dp"
                    android:layout_height="45sp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:backgroundTint="#ADADAD"
                    android:ems="15"
                    android:inputType="textPersonName"
                    android:text=""
                    android:textColor="#272727"
                    android:textSize="9pt"/>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView9id"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="起始日"
                    android:textColor="#8E8E8E"
                    android:textSize="9pt" />

                <TextView
                    android:id="@+id/txtdateid"
                    android:layout_width="200dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:inputType="date"
                    android:textColor="#272727"
                    android:textSize="9pt"/>

            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10id"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="療程天數"
                    android:textColor="#8E8E8E"
                    android:textSize="9pt" />


                <TextView
                    android:id="@+id/txtdayid"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="#272727"
                    android:textSize="10pt" />

                <TextView
                    android:id="@+id/textView19id"
                    android:layout_width="110dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="20dp"
                    android:text="天"
                    android:textColor="#8E8E8E"
                    android:textSize="10pt" />
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:id="@+id/layoutTesteid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/txttimeid"
                        android:layout_width="125dp"
                        android:layout_height="40dp"
                        android:layout_alignBottom="@+id/btnAdd"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="25dp"
                        android:text="每日提醒時間"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:textColor="#8E8E8E"
                        android:textSize="9pt" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/scrollView1id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:id="@+id/timelinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"></LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView18id"
                    android:layout_width="95dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="25dp"
                    android:text="藥品項目"
                    android:textColor="#8E8E8E"
                    android:textSize="9pt" />


                    <ImageButton
                        android:id="@+id/modifydrug"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/textView18id"
                        android:background="@drawable/add2"
                        android:contentDescription="@string/btnAdd" />
                </RelativeLayout>

            <LinearLayout
                android:id="@+id/scrollView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/newdrugcal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"></LinearLayout>
            </LinearLayout>


            </LinearLayout>




        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <TextView
                android:id="@+id/textbeaconid"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="25dp"
                android:layout_weight="1"
                android:text="Beacon"
                android:textColor="#8E8E8E"
                android:textSize="9pt" />
            <Spinner
                android:id="@+id/spinnerbeaconid"
                android:layout_width="150dp"
                android:layout_height="42sp"
                android:layout_marginRight="70dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/thirdsettext"
                android:textColor="#272727"
                ></Spinner>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="40dp"
            android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/m_modify"
                    android:layout_width="80dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="90dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonthird"
                    android:text="修改"
                    android:textSize="55px" />

                <Button
                    android:id="@+id/m_delete"
                    android:layout_width="80dp"
                    android:layout_height="38dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="90dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/buttonthird"
                    android:onClick="gotomedicinevertify"
                    android:text="刪除"
                    android:textSize="55px" />

            </LinearLayout>

        </TableRow>



    </TableLayout>

</ScrollView>
</LinearLayout>